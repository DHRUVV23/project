<% layout("/layouts/boilerplate") %>
    <div class="row">
      <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input type="text" name="listing[title]" placeholder="enter title" class="form-control"required>
        <div class="valid-feedback">Title looks Good!</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"required></textarea>
        <div class="invalid-feedback">Please enter a short Description</div>

        

      </div>


 <div class="mb-3">
  <lable for="image" class="form-label">Upload Image </lab>
  <input name="listing[image]"
  placeholder="enter image URL/Link"
  type="file"class="form-control" required
/>

 </div>

<div class="row">
  <div class="mb-3  col-md-4"> 
    <lable for="price" class="form-label">Price</lable>
    <input name="listing[price]" placeholder="enter price" type="number"  class="form-control" required/>
    <div class="invalid-feedback">Please enter a valid Price</div>
   </div>
  
   <div class="mb-3 col-md-8">
    <lable for="country" class="form-label">Country</lable>
    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
    <div class="invalid-feedback">Please enter a valid Country</div>
   </div>
</div>


 <div class="mb-3">
  <lable for="location" class="form-label">Location</lable>
  
  <input
  name="listing[location]"
  placeholder="enter location"
  type="text"class="form-control"required
  
/>
<div class="invalid-feedback">Please enter a valid Location</div>


      <button class="btn btn-dark add-btn mt-3 mb-3" >Add</button>
     
    </form>
   </div>
  </div>
 

